{
  "policy": {
    "description": "ILM policy for log indices - Hot/Warm/Cold/Delete lifecycle",
    "phases": {
      "hot": {
        "min_age": "0ms",
        "actions": {
          "rollover": {
            "max_age": "1d",
            "max_primary_shard_size": "50gb",
            "max_docs": 100000000
          },
          "set_priority": {
            "priority": 100
          }
        }
      },
      "warm": {
        "min_age": "3d",
        "actions": {
          "set_priority": {
            "priority": 50
          },
          "allocate": {
            "number_of_replicas": 1
          },
          "readonly": {},
          "forcemerge": {
            "max_num_segments": 1
          },
          "shrink": {
            "number_of_shards": 1
          }
        }
      },
      "cold": {
        "min_age": "7d",
        "actions": {
          "set_priority": {
            "priority": 0
          },
          "allocate": {
            "number_of_replicas": 0
          },
          "readonly": {}
        }
      },
      "delete": {
        "min_age": "30d",
        "actions": {
          "delete": {}
        }
      }
    },
    "_meta": {
      "description": "Lifecycle: Hot (0-3d) → Warm (3-7d) → Cold (7-30d) → Delete (30d+)",
      "managed_by": "vaultize-analytics",
      "authors": "Balaji Rajan and Claude (Anthropic)",
      "created_date": "2026-02-04"
    }
  }
}
